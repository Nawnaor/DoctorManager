<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Does.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp"
        android:orientation="vertical"
        android:background="#29282B">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_add_black_24dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pyidaungsubold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="အလုပ်ထည့်သွင်းရန်"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pyidaungsu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Customer ၏အချက်အလက်များ အသေးစိတ်ထည့်ပါ!"
            android:textAlignment="center"
            android:textColor="@color/colorAlert"
            android:alpha="0.8"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="30dp"
            android:text="အမည်"
            android:textColor="@color/colorLightPink" />

        <EditText
            android:id="@+id/addTaskTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pyidaungsu"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:padding="10dp"
            android:background="@drawable/btn_border"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="ဖုန်းနံပါတ်"
            android:textColor="@color/colorLightPink" />

        <EditText
            android:id="@+id/addPhone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pyidaungsu"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="number"
            android:padding="10dp"
            android:background="@drawable/btn_border"/>

        <EditText
            android:id="@+id/customerpass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pyidaungsu"
            android:textSize="12sp"
            android:textColor="@color/colorLightPink"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="textVisiblePassword"
            android:hint="Customer ဖုန်း Password ပါလျှင်"
            android:textColorHint="@color/colorAlert"
            android:layout_gravity="center"
            android:background="@drawable/btn_border"
            android:alpha="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="ဖုန်းအမျိုးအစားနှင့် ပျက်သည့်အကြောင်းအရာ"
            android:textColor="@color/colorLightPink"/>

        <EditText
            android:id="@+id/addTaskDescription2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/btn_border"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="IMEI နံပါတ်"
            android:textColor="@color/colorLightPink"/>

        <EditText
            android:id="@+id/imei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/btn_border"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="လက်ခံသည့်နေ့စွဲ"
            android:textColor="@color/colorLightPink"/>

        <EditText
            android:id="@+id/taskDate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:textColorHint="@color/colorPrimary"
            android:hint="၂ချက်နှိပ်ပါ..."
            android:alpha="0.7"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/btn_border"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="အချိန်"
            android:textColor="@color/colorLightPink"/>

        <EditText
            android:id="@+id/taskTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:textColorHint="@color/colorPrimary"
            android:hint="၂ချက်နှိပ်ပါ..."
            android:alpha="0.7"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/btn_border"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="ပြင်မည့်အကြောင်းအရာ"
            android:textColor="@color/colorLightPink"/>

        <EditText
            android:id="@+id/taskEvent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:background="@drawable/btn_border"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="10dp"
            android:text="ကျသင့်ငွေ"
            android:textColor="@color/colorLightPink"/>

        <EditText
            android:id="@+id/charges2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorLightPink"
            android:fontFamily="@font/pyidaungsu"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:inputType="number"
            android:background="@drawable/btn_border"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/conditionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="အခြေအနေ"
            android:layout_gravity="center"
            android:drawableStart="@drawable/condition_24"
            android:drawablePadding="8dp"
            android:textSize="12sp"
            android:textColorHint="@color/colorPrimary"
            android:textColor="#00B8D4"
            android:alpha="0.7"/>


        <Button
            android:id="@+id/put"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ထည့်သွင်းမည်"
            android:textColor="@color/colorLightPink"
            android:background="@drawable/btn_background"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="မထည့်တော့ပါ"
            android:gravity="center"
            android:textColor="@color/colorAlert"
            android:layout_marginTop="10dp"/>




    </LinearLayout>


</ScrollView>