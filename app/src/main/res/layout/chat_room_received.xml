<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/msglayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#29282B"
    android:paddingTop="8sp">


    <TextView
        android:id="@+id/text_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="John Doe"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_message_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:background="@drawable/in_message_bg"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/pyidaungsu"
        app:layout_constraintTop_toTopOf="parent"/>



    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_message_body"
        android:layout_toRightOf="@id/text_message_body"
        android:text="11:40"
        android:textColor="#979797"
        android:textSize="10sp"
        android:textStyle="italic" />

</RelativeLayout>