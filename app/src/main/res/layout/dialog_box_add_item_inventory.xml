<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="5dp"
    android:background="@drawable/login_gradient"
    >

    <EditText
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textColor="#fff"
        android:inputType="text"
        android:layout_weight="0.03"
        android:hint="ပစ္စည်းအမည်"
        android:textColorHint="@color/colorPrimary"/>

    <EditText
        android:id="@+id/item_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textColor="#fff"
        android:inputType="number"
        android:layout_weight="0.03"
        android:hint="ရောင်းစျေး"
        android:textColorHint="@color/colorPrimary"/>


    <EditText
        android:id="@+id/profit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:textColorHint="@color/colorPrimary"
        android:inputType="text|number"
        android:textColor="#fff"
        android:layout_weight="0.03"
        android:hint="အမြတ် (ပစ္စည်း၁ခုစီ)"
        android:layout_margin="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="နေ့စွဲ"
        style="?spinnerStyle"
        android:layout_weight="0.03"
        android:textColorHint="@color/colorPrimary"
        android:id="@+id/tvDate"
        android:layout_margin="4dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ရောင်းမည့်အရေအတွက်"
        android:fontFamily="@font/pyidaungsubold"
        android:ems="20"
        android:layout_margin="4dp"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"/>

    <com.alexzaitsev.meternumberpicker.MeterView
        android:id="@+id/quantity"
        style="@style/MeterViewStyle"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="0.03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Ok"
        android:background="#db3236"
        android:textColor="#FFFFFF"/>
</LinearLayout>