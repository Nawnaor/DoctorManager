<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="true">

        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:startColor="#00B8D4"
                android:endColor="#673AB7"
                android:angle="270"/>

            <corners
                android:radius="30dp"/>

            <size
                android:width="60dp"
                android:height="14dp"/>

        </shape>

    </item>

    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:startColor="#D50000"
                android:endColor="#673AB7"
                android:angle="270"/>

            <corners
                android:radius="30dp"/>

            <size
                android:width="60dp"
                android:height="14dp"/>

        </shape>
    </item>

</selector>